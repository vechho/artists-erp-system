{
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "workbench.colorCustomizations": {
    "editor.foldBackground": "#ffffff00",
    "editor.selectionBackground": "#00f7ff23",
    "editor.lineHighlightBackground": "#ffffff00",
    "editor.lineHighlightBorder": "#00f7ff07",
    "editorLineNumber.foreground": "#ffffff0c",
    "editorIndentGuide.activeBackground1": "#696969",
    "editorIndentGuide.background1": "#3a3a3a07"
  },

  "files.exclude": {
    "**/.env.local": false,
    "**/.env.local.EXAMPLE": false,

    "**/middleware.ts": false,
    "**/README.md": false,

    "**/.next": false,
    "**/.github": true,
    "**/.git": true,
    "**/.gitignore": false,
    "**/node_modules": true,
    "**/LICENSE": true,

    "**/next-auth.d.ts": false,
    "**/next-env.d.ts": false,
    "**/process.d.ts": false,

    //  root files
    "**/tsconfig.json": false,
    "**/package.json": false,
    "**/package-lock.json": true,

    // stuff
    "**/api-lib": false,
    "**/lib": false,
    "**/types": false,
    "**/public": true,
    "**/examples": false
  }
}
